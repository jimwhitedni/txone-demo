{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext", "dom", "dom.iterable"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "components/*": ["src/components/*"]
    },
    // "importHelpers": true
  },
  "exclude": ["node_modules"],
  "typeRoots": ["./node_modules/@types/**/*.d.ts", "./src/types/*.ts"],
  "include": ["src", "jest.config.ts", "src/types/declaration.d.ts", "jest-setup.ts", "tests", "playwright.config.ts", "webpackConfig"],
}